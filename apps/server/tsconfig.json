{
  "extends": "@repo/config-typescript/base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",

    "types": ["bun-types"],

    "declaration": true,
    "outDir": "dist",
    "noEmit": false,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,

    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
